extends ../index.pug

block content
  include ../components/about
  include ../components/timeline
  div.bubbles_one
    include ../components/bubbles
  div.bubbles_two
    include ../components/contact.pug
  script. 
    function getLargerDimension() {
      return Math.max(window.innerWidth, window.innerHeight);
    }

    gsap.to(".bubbles_two", {
      width: window.innerWidth * .85,
      height: window.innerHeight * .85,
      borderRadius: "5%",
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".bubbles_one",
        start: "20% top",
        end: "85% top",
        scrub: 1,
        invalidateOnRefresh: true
      }
    });

